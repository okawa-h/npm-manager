/*-------------------------------------------------------------------------
	Main
/*-----------------------------------------------------------------------*/
#all {
	
}

#header {
	margin-bottom: 1.6rem;
	.inner {
		padding: 1.6rem 0;
		border-bottom: 1px solid rgba(255,255,255,0.1);
	}
	.title {
		display: inline-block;
		color: #a4bbd7;
		font-size: 1.4rem;
		font-weight: bold;
	}
	.version {
		float: right;
		margin-top: .4rem;
		color: $white;
		font-size: .8rem;
	}
}

/*-------------------------------------------------------------------------
	Main
/*-----------------------------------------------------------------------*/
.status-version {
	color: #fff;
	font-size: .8rem;
}

.status-modulelist {
	width: 100%;
	margin-top: -.5rem;
	li {
		display: block;
		width: 100%;
		margin-top: .5rem;
		transition: background-color .15s ease-in-out;
		&:after {
			content:"";
			display: block;
			clear:both;
			visibility:hidden;
		}
		&:hover {
			background-color: rgba(255,255,255,.1);
		}
		&.head {
			p {
				font-weight: bold;
			}
		}
		p {
			float: left;
			width: 25%;
			color: #fff;
			font-size: .8rem;
			button {
				cursor: pointer;
				set-button(#546E7A);
			}
		}
	}
}

/*-------------------------------------------------------------------------
	Modalwindow
/*-----------------------------------------------------------------------*/
#modalwindow {
	display: none;
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	.background {
		display: table;
		width: 100%;
		height: 100%;
		background-color: rgba($bg,.8);
		text-align: center;
		.content {
			display: table-cell;
			vertical-align: middle;
		}
	}
	.load-spinner {
		width: 50px;
		height: 50px;
	}
}

.load-spinner {
	position: relative;
	display: inline-block;
	width: 50px;
	height: 50px;
	border: 2px solid transparent;
	border-top-color: #0cf;
	border-radius: 50%;
	animation: spin 0.75s infinite linear;
	&:before {
		left: -2px;
		top: -2px;
		display: inline-block;
		position: absolute;
		content: '';
		width: inherit;
		height: inherit;
		border: inherit;
		border-color: transparent;
		border-top-color: #0cf;
		border-radius: inherit;
		animation: spin 1.5s infinite ease;
	}
}

@keyframes spin {
	from {
		transform: rotate(0deg);
	}
	to {
		transform: rotate(360deg);
	}
}








