/*-------------------------------------------------------------------------
	Html
/*-----------------------------------------------------------------------*/
html,body {
	background-color: $bg;
	font-size: 16px;
	font-family: 'Source Sans Pro', 'Lucida Grande', sans-serif;
	-webkit-font-smoothing: antialiased;
	&.no-scroll {
		overflow: hidden;
		@media screen and (max-width:$SW) {
			position: fixed;
			width: 100%;
			height: 100%;
		}
	}
	@media screen and (max-width:$SW) {
		font-size: 14px;
	}
}

#all {
	padding-bottom: 2rem;
}

.wrap {
	padding: 0 2rem;
	@media screen and (max-width:$SW) {
		padding: 0 1rem;
	}
}

